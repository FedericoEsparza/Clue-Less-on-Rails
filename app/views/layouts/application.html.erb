<!DOCTYPE html>
<html>
    <head>
        <title>ClueLessOnRails</title>
        <%= csrf_meta_tags %>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <%= stylesheet_link_tag    'game_areas', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <p class="notice shift"><%= notice %></p>
        <p class="alert shift"><%= alert %></p>

        <div class="nav">

          <% if current_user %>
            <%= link_to "Lobby", lobby_path %>
            <%= link_to "Profile", edit_user_registration_path %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "Register", new_user_registration_path %>
            <%= link_to "Login", new_user_session_path %>
          <% end %>
          <br>
        </div>

        <div class="site-wrapper">
            <div class="site-wrapper-inner">
                <div class="cover-container">
                    <%= video_tag( 'clue-video.mp4', id: 'background', autoplay: true, loop: true, muted: true, poster: 'clue-mansion.jpg' ) %>
                    <div class="cover-container-opacity"></div>

                    <%= yield %>
                </div>
            </div>
        </div>
    </body>
</html>
